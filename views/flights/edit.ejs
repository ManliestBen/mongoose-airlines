<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css">
<script defer src="/javascripts/date-helpers.js"></script>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="<%= flight.airline %>"><%= flight.airline %></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-num-input">Flight No:</label>
    <input type="number" required value="<%= flight.flightNo %>" name="flightNo" id="flight-num-input" min="10" max="9999">
    <label for="departs-input">Departure:</label>
    <input type="datetime-local" value="<%= localISOTime %>" name="departs" id="departs-input">
    <input type="datetime-local" id="hidden-date" name="currentLocalDateTime" hidden>
    <button type="submit">Save Flight ðŸ’¾</button>
  </form>
</main>

<%- include('../partials/footer') %>